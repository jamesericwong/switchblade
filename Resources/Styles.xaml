<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 
    WinUI 3 uses built-in theming with ThemeResource references.
    These custom styles provide additional styling beyond WinUI defaults.
    -->

    <!-- Modern Button Style -->
    <Style x:Key="ModernButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{ThemeResource ControlFillColorDefaultBrush}"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <!-- Modern TextBox Style -->
    <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{ThemeResource ControlFillColorDefaultBrush}"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <!-- High Contrast TextBox Style -->
    <Style x:Key="HighContrastTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource ModernTextBoxStyle}">
        <Setter Property="Background" Value="{ThemeResource SolidBackgroundFillColorBaseBrush}"/>
    </Style>

    <!-- Theme Resource Brushes for backwards compatibility with dynamic theme application -->
    <!-- Note: In WinUI 3, use ThemeResource references instead of DynamicResource -->
    <SolidColorBrush x:Key="WindowBackground" Color="{ThemeResource LayerFillColorDefaultColor}"/>
    <SolidColorBrush x:Key="ControlBackground" Color="{ThemeResource ControlFillColorDefaultColor}"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="{ThemeResource TextFillColorPrimaryColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{ThemeResource ControlStrokeColorDefaultColor}"/>
    <SolidColorBrush x:Key="HighlightBrush" Color="{ThemeResource ControlFillColorSecondaryColor}"/>

</ResourceDictionary>
