<UserControl x:Class="SwitchBlade.Views.Components.ResultList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:core="clr-namespace:SwitchBlade.Core"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400">
    <UserControl.Resources>
        <core:ShortcutVisibilityConverter x:Key="ShortcutVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </UserControl.Resources>
    
    <ListBox x:Name="ResultsConfig"
             Margin="0,0,10,0"
             Background="Transparent"
             BorderThickness="0"
             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
             VirtualizingStackPanel.IsVirtualizing="True"
             VirtualizingStackPanel.VirtualizationMode="Recycling"
             VirtualizingStackPanel.ScrollUnit="Pixel"
             ItemsSource="{Binding FilteredWindows}"
             SelectedItem="{Binding SelectedWindow, Mode=TwoWay}">
        <ListBox.ItemContainerStyle>
            <Style TargetType="ListBoxItem">
                <!-- Interaction Events -->
                <EventSetter Event="MouseEnter" Handler="ListBoxItem_MouseEnter"/>
                <EventSetter Event="PreviewMouseLeftButtonUp" Handler="ListBoxItem_PreviewMouseLeftButtonUp"/>
                <Setter Property="Height" Value="{Binding DataContext.ItemHeight, RelativeSource={RelativeSource AncestorType=ListBox}}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListBoxItem">
                            <Border x:Name="ItemBorder" 
                                    Background="Transparent" 
                                    CornerRadius="10" 
                                    Padding="12,6" 
                                    Margin="0,2,8,2">
                                <Grid VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>  <!-- Badge -->
                                        <ColumnDefinition Width="Auto"/>  <!-- Icon -->
                                        <ColumnDefinition Width="*"/>     <!-- Title/Process -->
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Number Badge -->
                                    <Border x:Name="NumberBadge"
                                            Grid.Column="0"
                                            Background="{DynamicResource HighlightBrush}"
                                            CornerRadius="4"
                                            Padding="6,4"
                                            Margin="0,0,10,0"
                                            VerticalAlignment="Center"
                                            Opacity="{Binding BadgeOpacity}"
                                            SnapsToDevicePixels="True">
                                        <Border.CacheMode>
                                            <BitmapCache RenderAtScale="1"/>
                                        </Border.CacheMode>
                                        <Border.RenderTransform>
                                            <TranslateTransform X="{Binding BadgeTranslateX}"/>
                                        </Border.RenderTransform>
                                        <Border.Visibility>
                                            <MultiBinding Converter="{StaticResource ShortcutVisibilityConverter}">
                                                <Binding Path="IsShortcutVisible"/>
                                                <Binding Path="DataContext.EnableNumberShortcuts" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type ListBox}}"/>
                                            </MultiBinding>
                                        </Border.Visibility>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <!-- Modifier Key -->
                                            <TextBlock Text="{Binding DataContext.ShortcutModifierText, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                       FontSize="9"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource ForegroundBrush}"
                                                       Opacity="0.7"
                                                       VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding DataContext.ShortcutModifierText, RelativeSource={RelativeSource AncestorType=ListBox}}" Value="">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <!-- Separator -->
                                            <TextBlock Text="+"
                                                       FontSize="9"
                                                       Foreground="{DynamicResource ForegroundBrush}"
                                                       Opacity="0.5"
                                                       Margin="2,0"
                                                       VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding DataContext.ShortcutModifierText, RelativeSource={RelativeSource AncestorType=ListBox}}" Value="">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <!-- Number Key -->
                                            <TextBlock Text="{Binding ShortcutDisplay}"
                                                       FontSize="11"
                                                       FontWeight="Bold"
                                                       Foreground="{DynamicResource ForegroundBrush}"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- Application Icon -->
                                    <Image Grid.Column="1" 
                                            Source="{Binding Icon}" 
                                            Width="20" Height="20" 
                                            Margin="0,0,8,0"
                                            VerticalAlignment="Center"
                                            Visibility="{Binding DataContext.ShowIcons, RelativeSource={RelativeSource AncestorType=ListBox}, Converter={StaticResource BoolToVisibility}}"/>
                                    
                                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Title}" Foreground="{DynamicResource ForegroundBrush}" FontSize="14" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding ProcessName}" Foreground="{DynamicResource BorderBrush}" FontSize="12" Opacity="0.85"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource HighlightBrush}"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource HighlightBrush}"/>
                                    <Setter TargetName="ItemBorder" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                    <Setter TargetName="ItemBorder" Property="BorderThickness" Value="1"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ListBox.ItemContainerStyle>
    </ListBox>
</UserControl>
