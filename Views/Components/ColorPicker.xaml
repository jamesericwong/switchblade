<UserControl x:Class="SwitchBlade.Views.Components.ColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <UserControl.Resources>
        <Style x:Key="SliderThumbStyle" TargetType="{x:Type Thumb}">
            <Setter Property="SnapsToDevicePixels" Value="true"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="Height" Value="14"/>
            <Setter Property="Width" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Ellipse x:Name="Ellipse" 
                                 Fill="White" 
                                 Stroke="#FFBBBBBB" 
                                 StrokeThickness="1" 
                                 Effect="{DynamicResource ShadowEffect}">
                            <Ellipse.Resources>
                                <DropShadowEffect x:Key="ShadowEffect" BlurRadius="2" ShadowDepth="1" Opacity="0.3"/>
                            </Ellipse.Resources>
                        </Ellipse>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ColorSliderStyle" TargetType="{x:Type Slider}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Slider}">
                        <Grid>
                            <Border x:Name="TrackBackground" 
                                    Height="8" 
                                    Margin="5,0" 
                                    CornerRadius="4" 
                                    Background="{TemplateBinding Background}"/>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource SliderThumbStyle}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- RGB Sliders for simplicity and testability while maintaining premium feel -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <!-- Red -->
            <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="R" Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center" FontSize="11" Opacity="0.7"/>
                <Slider Grid.Column="1" Minimum="0" Maximum="255" Value="{Binding R, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Style="{StaticResource ColorSliderStyle}">
                    <Slider.Background>
                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                            <GradientStop Color="#000000" Offset="0"/>
                            <GradientStop Color="#FF0000" Offset="1"/>
                        </LinearGradientBrush>
                    </Slider.Background>
                </Slider>
                <TextBlock Grid.Column="2" Text="{Binding R, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0:0}}" 
                           Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="11"/>
            </Grid>

            <!-- Green -->
            <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="G" Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center" FontSize="11" Opacity="0.7"/>
                <Slider Grid.Column="1" Minimum="0" Maximum="255" Value="{Binding G, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Style="{StaticResource ColorSliderStyle}">
                    <Slider.Background>
                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                            <GradientStop Color="#000000" Offset="0"/>
                            <GradientStop Color="#00FF00" Offset="1"/>
                        </LinearGradientBrush>
                    </Slider.Background>
                </Slider>
                <TextBlock Grid.Column="2" Text="{Binding G, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0:0}}" 
                           Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="11"/>
            </Grid>

            <!-- Blue -->
            <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="B" Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center" FontSize="11" Opacity="0.7"/>
                <Slider Grid.Column="1" Minimum="0" Maximum="255" Value="{Binding B, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Style="{StaticResource ColorSliderStyle}">
                    <Slider.Background>
                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                            <GradientStop Color="#000000" Offset="0"/>
                            <GradientStop Color="#0000FF" Offset="1"/>
                        </LinearGradientBrush>
                    </Slider.Background>
                </Slider>
                <TextBlock Grid.Column="2" Text="{Binding B, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0:0}}" 
                           Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="11"/>
            </Grid>

            <!-- Alpha -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="A" Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center" FontSize="11" Opacity="0.7"/>
                <Slider Grid.Column="1" Minimum="0" Maximum="255" Value="{Binding A, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Style="{StaticResource ColorSliderStyle}">
                    <Slider.Background>
                        <VisualBrush Stretch="None" TileMode="Tile" Viewport="0,0,10,10" ViewportUnits="Absolute">
                            <VisualBrush.Visual>
                                <Grid Width="10" Height="10">
                                    <Rectangle Fill="LightGray"/>
                                    <Rectangle Fill="White" HorizontalAlignment="Left" VerticalAlignment="Top" Width="5" Height="5"/>
                                    <Rectangle Fill="White" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="5" Height="5"/>
                                </Grid>
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Slider.Background>
                </Slider>
                <TextBlock Grid.Column="2" Text="{Binding A, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0:0}}" 
                           Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="11"/>
            </Grid>
        </StackPanel>

        <!-- Preview and Hex -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox Text="{Binding HexColor, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}"
                     Style="{DynamicResource ModernTextBoxStyle}"
                     Height="30"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Center"
                     FontFamily="Consolas"
                     FontSize="12"/>
            
            <Border Grid.Column="1" 
                    Width="60" Height="30" 
                    Margin="10,0,0,0" 
                    CornerRadius="6" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="1">
                <Border.Background>
                    <SolidColorBrush Color="{Binding PreviewColor, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </Border.Background>
            </Border>
        </Grid>
    </Grid>
</UserControl>
